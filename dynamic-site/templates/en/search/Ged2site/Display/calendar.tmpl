<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
	<head>
		[% IF month %]
			<title>Events in [% month %] [% year %] in [% SiteTitle.join(' ') %]</title>
		[% ELSE %]
			<title>Calendar of [% SiteTitle.join(' ') %]</title>
		[% END %]
		<meta http-equiv="Content-Language" content="English">
		<!--
			<meta name="msvalidate.01" content="deadbeef" />
		-->
		<!--
			https://fullcalendar.io/js/fullcalendar-2.9.1/demos/agenda-views.html
			<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
		-->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.9.0/fullcalendar.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.9.0/fullcalendar.print.css" media="print" />

		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/moment.min.js"></script>
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.9.0/fullcalendar.min.js"></script>

		<script>
			\$(document).ready(function() {
				\$('#calendar').fullCalendar({
					header: {
						left: 'prev,next',
						// center: 'Calendar of [% SiteTitle.join(" ") %]'
						center: 'title',
						right: '',
					},
					eventLimit: true, // allow "more" link when too many events
					events: [
						[% FOREACH event IN events %]
							{
								title: '[% event.title %]: [% event.year %] [% event.event %]',
								start: '[% year %]-[% event.month | format('%02d') %]-[% event.day | format('%02d') %]',
								url: '/cgi-bin/page.fcgi?page=people&entry=[% event.person %]'
							},
						[% END %]
					]
				});
			});
		</script>
		<style>
			body {
				margin: 40px 10px;
				padding: 0;
				font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
				font-size: 14px;
			}

			#calendar {
				max-width: 1500px;
				margin: 0 auto;
			}
		</style>
	</head>
	<body>
		<center>
			<h1>Calendar of [% SiteTitle.join(' ') %]</h1>
			[% IF error %]
				<p><font color="red" size="+2">[% error %]</font></p>
			[% END %]
			<div id='calendar'></div>
			<a href="?page=people&home=1">Home</a><br>
			<a href="?page=censuses">Census Index</a><br>
			<a href="?page=surnames">Surname Index</a><br>
			<a href="?page=history">Family History</a><br>
			<a href="?page=todo">To Do</a><br>
			<a href="?page=graphs">Analytics</a><br>
			<a href="?page=emmigrants">Emigrants</a><br>
			<a href="?page=ww1">WW1 Fatalaties</a><br>
			<a href="/visjs.html">Timeline</a>
		</center>

		<p align="right">
			<i>
			Generated by <a href="https://github.com/nigelhorne/ged2site">ged2site</a>.
			[% IF updated %]
				[% USE date %]
				Last updated on [% date.format(time = updated, format = '%d %b %Y', locale = lingua.language_code_alpha2) %]
			[% END %]
			</i>
		</p>
	</body>
</html>
