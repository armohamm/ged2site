<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
	<head>
		[% IF month %]
			<title>Events in [% month %] [% year %] in [% SiteTitle.join(' ') %]</title>
		[% ELSE %]
			<title>Calendar of [% SiteTitle.join(' ') %]</title>
		[% END %]
		<meta http-equiv="Content-Language" content="English">
		<!--
		<meta name="msvalidate.01" content="deadbeef" />
		-->
	</head>
	<body>
		<center>
			[% IF month %]
				<h1>Events in [% month %] [% year %] in [% SiteTitle.join(' ') %]</h1>
			[% ELSE %]
				<h1>Calendar of [% SiteTitle.join(' ') %]</h1>
			[% END %]
			[ <a href="?page=people&home=1">Home</a> ] | [ <a href="?page=censuses">Census Index</a> ] | [ <a href="?page=surnames">Surname Index</a> ] | <a href=?page=history">Family History</a> ]
			[% IF error %]
				<p><font color="red" size="+2">[% error %]</font></p>
			[% END %]
		</center>
		[% IF months %]
			<ul>
				[% index = 1 %]
				[% FOREACH month IN months %]
					<li><a href="?page=calendar&month=[% index %]">[% month %]</a></li>
					[% index = index + 1 %]
				[% END %]
			</ul>
		[% ELSIF events %]
			[% FOREACH day IN events %]
				[% IF day.0 %]
					<h2>[% day.0.day %]</h2>
					<ul>
						[% FOREACH event IN day %]
							<li><a href="?page=people&entry=[% event.person %]">[% event.title %]</a>: [% event.year %] [% event.event %]</li>
						[% END %]
					</ul>
				[% END %]
			[% END %]
		[% END %]
		<p align="right">
			<i>
			Generated by <a href="https://github.com/nigelhorne/gedsite">gedsite</a>.
			[% IF updated %]
				[% USE date %]
				Last updated on [% date.format(time = updated, format = '%d %b %Y', locale = lingua.language_code_alpha2) %]
			[% END %]
			</i>
		</p>
	</body>
</html>
