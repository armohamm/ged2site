<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
    "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>History of [% SiteTitle.join(' ') %]</title>
		<meta http-equiv="Content-Language" content="English">
		<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="/css/responsive.css">
		<link href='https://fonts.googleapis.com/css?family=Dosis:200, 300, 400,, 500, 600, 700,800' rel='stylesheet' type='text/css'>
		<!--
		<meta name="msvalidate.01" content="deadbeef" />
		-->
	</head>
	<body class="page">
		<center>
			[ <a href="?page=people&home=1">Home</a> ] | [ <a href="?page=censuses">Census Index</a> ] | [ <a href="?page=surnames">Surname Index</a> ]
		</center>
		<div id="start" class="timeline container">
			<h2 class="module">History of [% SiteTitle.join(' ') %]</h2>
		[% IF error %]
			<p><font color="red" size="+2">[% error %]</font></p>
		[% END %]

		<div class="small-border"></div>
		<div class="big-border"></div>

		<div class="ss-container">
			[% USE day = date(format = '%e %B', locale = lingua.language_code_alpha2) %]
			[% FOREACH year IN events.keys.sort.reverse %]
				<div class="ss-row ss-medium">
					<div class="ss-left jaartal module">
						<h3>[% year %]</h3>
						<div class="bolleke ss-l module">
							<img src="/images/bol.svg" alt="jaartal indicator" height="50" width="50">
						</div><!-- ./ss-r -->
					</div><!-- ./ss-left -->
					<div class="ss-right module">
						<p>
							[% FOREACH event IN events.$year %]
								[% day.format("0:0:0 $event.day:$event.month:$year") %]
								<a href="?page=people&entry=[% event.person %]">[% event.title %]</a>:
								[% event.event %]
								<br>
							[% END %]
						</p>
					</div><!-- ./ss-right -->
				</div><!-- ./ss-row -->
			[% END %]
		</div><!-- ./ss-container -->

		<div class="clearfix"></div>

		<div class="big-border"></div>
		<div class="small-border"></div>

		<h2 class="module">End</h2>
	</div><!-- ./timeline -->
		<p align="right">
			<i>
			Generated by <a href="https://github.com/nigelhorne/gedsite">gedsite</a>.
			Last updated on Jul 22, 2016
			</i>
		</p>
	</body>
</html>
